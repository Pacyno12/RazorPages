@page
@model TareaRazorPage.Pages.Juegos.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Listado de juegos</h1>

<p>
    <a asp-page="Create">Registrar un nuevo juego</a>
</p>

<form>
    <p>
        Titulo: <input type="text" asp-for="SearchString" />
        
        Filtrar por genero: 
        <select asp-for="JuegoGenero" asp-items="Model.Genres">
           <option value="">Todos los generos</option>
        </select>
        <input type="submit" value="Buscar" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Juego[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Juego[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Juego[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Juego[0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Juego) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Editar</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Detalles</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
